<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:backgroundTint="#F44336" />

        <TextView
            android:id="@+id/placeName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="250dp"
            android:text="APPLEBEES"
            app:autoSizeTextType="uniform" />

        <ImageView
            android:id="@+id/matchImage"
            android:layout_width="match_parent"
            android:layout_height="289dp"
            app:srcCompat="@drawable/applebees" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="817dp"
        android:layout_height="544dp">

        <ImageView
            android:id="@+id/phoneNumber"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            tools:srcCompat="@drawable/applephone" />

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="220dp"
            app:srcCompat="@drawable/preference_location" />

        <ImageView
            android:id="@+id/locationIcon2"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/website" />

        <TextView
            android:id="@+id/phoneNumText"
            android:layout_width="208dp"
            android:layout_height="52dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="80dp"
            android:text="(XXX) XXX-XXXX"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/websiteText"
            android:layout_width="208dp"
            android:layout_height="52dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="150dp"
            android:text="www.restaurant.com"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="208dp"
            android:layout_height="52dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="220dp"
            android:text="5555 Fake Street"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/locationText2"
            android:layout_width="208dp"
            android:layout_height="52dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="260dp"
            android:text="Fake City, NN 55555"
            app:autoSizeTextType="uniform" />
    </androidx.cardview.widget.CardView>

</LinearLayout>